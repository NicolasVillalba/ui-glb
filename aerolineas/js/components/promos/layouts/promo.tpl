<div class="cols left md-6 promo-image">
    <img src="{{ image }}" alt="{{ img-alt }}" /></div>
<div class="cols left md-6 promo-info">
    <span class="promo-origin">{{ origin }}</span>
    <h2 class="aa-color promo-title promo-destination">{{ destination }}</h2>
    <p class="promo-description">{{ description }}</p>
    <span class="promo-purchase-title">Tarifa:</span>
    <span class="aa-color promo-price">{{ currency }}{{ currencySymbol }}{{ price }}</span>
    <a class="aa-color promo-purchase" href="{{ payment }}">Comprar</a>
</div>